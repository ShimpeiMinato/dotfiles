# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
  source /etc/bashrc
fi

# less colors setting.
export LESS='-R'

# Path settings
PATH=/usr/local/bin:/usr/local/sbin:$PATH
PATH=~/bin:$PATH
export PATH

# User specific aliases and functions
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Source Git extension
if [ -f ~/Repository/git/dotfiles/bash/.git-completion.sh ]; then
  source ~/Repository/git/dotfiles/bash/.git-completion.sh
fi
if [ -f ~/Repository/git/dotfiles/bash/.git-prompt.sh ]; then
  source ~/Repository/git/dotfiles/bash/.git-prompt.sh
fi

# for platform
if [ "`uname -s`" == "Darwin" ]; then
  #export PS1="[\t \u:\w]\n\$ "
  export PS1="\[\033[037;044m\]\W\$(__git_ps1 \"[%s]\")$\[\033[037;000m\] "

  # ls colors setting.
  # change directory and symbolic link color.
  export LS_COLORS="no=00:fi=00:di=01;36:ln=00;36:*.lnk=00;36"

  # grep colors setting.
  export GREP_COLOR='1;37;41'

  # less colors setting.
  export LESSOPEN='| /usr/local/Cellar/source-highlight/3.1.7/bin/src-hilite-lesspipe.sh %s'

  # Path settings
  PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
  PATH=$PATH:/usr/local/mysql/bin
  PATH=$PATH:/usr/local/mysql/support-files
  PATH=$PATH:~/devtools/android-sdk-macosx/tools
  PATH=$PATH:~/devtools/android-sdk-macosx/platform-tools
  export PATH

  # User specific aliases and functions
  alias ls='ls -F -G'
  #alias ls='ls -F --color=auto --show-control-chars'
  #alias eng='LANG=C LANGUAGE=C LC_CTYPE=C'
  alias grep='grep -E --color=auto'
  alias svn='colorsvn'
  alias be='bundle exec'

  # npm settings.
  export NODE_PATH='/usr/local/lib/node_modules'

  # Golang
  export GOROOT=/usr/local/opt/go/libexec
  export GOPATH=$HOME/.go

  # Homebrew-cask
  export HOMEBREW_CASK_OPTS="--appdir=/Applications"
fi

